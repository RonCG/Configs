{
    "workbench.iconTheme": "material-icon-theme",
    "js/ts.implicitProjectConfig.experimentalDecorators": true,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": false,
    "editor.lineNumbers": "relative",
    "vim.useCtrlKeys": false,
    "vim.leader": "<Space>",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        },
        {
            "before": ["J", "K"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
          "before": ["H"],
          "after": ["5", "b"]
        },
        {
          "before": ["L"],
          "after": ["5", "w"]
        },
        {
          "before": ["J"],
          "after": ["L", "z", "z"]
        },
        {
          "before": ["K"],
          "after": ["H", "z", "z"]
        }, 
        {
            "before": ["c", "m"],
            "after": ["g", "c"]
        },
        {
            "before": ["<Leader>", "j"],
            "after": ["J"]
        },
        {
            "before": ["<Leader>", "p"],
            "after": ["\"", "0", "p"]
        },
        {
            "before": ["<Leader>", "P"],
            "after": ["\"", "0", "P"]
        },
        {
            "before": ["<Leader>", "r"],
            "after": ["d", "i", "w", "\"", "0", "P"]
        },
        {
            "before": ["<Leader>", "v"],
            "after": ["C-v"]
        },
        {
            "before": ["<Leader>", "d"],
            "after": ["y", "i", "w"]
        },
        {
            "before": ["<Leader>", "D"],
            "after": ["y", "i", "W"]
        }
     ],
    "vim.handleKeys": {
        "<C-d>": false,
        "<C-r>": true
    },
    "cSpell.userWords": [
        "employeetimeoff"
    ]
    
}